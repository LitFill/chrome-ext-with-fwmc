{
  "manifest_version": 3,
  "name": "FUWAMOCO Everywhere",
  "version": "1.4.0",
  "description": "Let the demon dog twins guide your web-surfing journey. We're not responsible for any chaos that ensues. Idea from https://x.com/paramedsz/status/1951152462393450518",
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content.js"],
      "css": ["css/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["with-fwmc.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}