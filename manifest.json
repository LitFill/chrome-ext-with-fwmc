{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Image Adder",
  "version": "1.0",
  "description": "Adds an image to the top of YouTube video thumbnails.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["with-fwmc.png"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
